<div id="page-content">
<h1 class="text-center mt-4">Bloggers</h1>
<div class="flickr_pagination">
    <%= will_paginate @bloggers, :container => false %>
  </div>
<div class="container">
<% @bloggers.each do |blogger| %>
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    By <%= blogger.email.split("@")[0].capitalize %>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= pluralize(blogger.articles.count,"article") %></h5>
                    <%= link_to "View Profile", blogger_path(blogger), class: "btn btn btn-outline-success" %>
                    <% if blogger_signed_in? && blogger==current_blogger %>
                        <%= link_to "Edit Profile", edit_blogger_path(current_blogger), class: "btn btn-outline-primary" %>
                    <% end %>    
                </div>
        <div class="card-footer text-muted">
            <small>
            Joined <%= time_ago_in_words(blogger.created_at) %> ago
            </small>
        </div>
            </div>
        </div>
    </div>
<% end %>
</div>
<div class="flickr_pagination mb-4">
    <%= will_paginate @bloggers, :container => false %>
  </div>
</div>