<div id="page-content">
<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<% if blogger_signed_in? && current_blogger.admin? %>
  <div class="text-center mt-4 >
    <% link_to 'Edit category name', edit_category_path(@category), class:"btn btn-outline-primary" %>
  </div>  
<% end %>
<h3 class="text-center mt-4">Articles</h3>
    <% if @category.articles.count==0 %>
        <h4 class="text-center mt-4"> No Articles Yet <h4>
    <% else %>    
      <div class="flickr_pagination mb-4">
        <%= will_paginate @articles, :container => false %>
      </div>
      <%= render 'articles/article' %>
        <div class="flickr_pagination mb-4">
      <%= will_paginate @articles, :container => false %>
      </div>
    <% end %>
</div>
